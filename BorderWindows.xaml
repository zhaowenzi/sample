<Window x:Class="素材合成.BorderWindows"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:素材合成"
        mc:Ignorable="d"
        WindowStyle="None"
        Background="Transparent"
        BorderBrush="#0478FF"
        BorderThickness="2"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterOwner"
        AllowsTransparency="True"
        Title="BorderWindows" Height="778.7" Width="438">
    <Grid>
        <StackPanel Orientation="Horizontal"  VerticalAlignment="Top" Margin="0,5,0,0">
            <TextBlock FontSize="20"  >裁剪像素</TextBlock>
            <TextBox  Background="Transparent" BorderThickness="1"  Text="{Binding CutPixel_1,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                                          BorderBrush="#0478FF" MinWidth="40" VerticalAlignment="Center" 
                                                           Foreground="#0478FF" FontSize="25"
                                                              VerticalContentAlignment="Center" HorizontalContentAlignment="Center" ></TextBox>
        </StackPanel>
    </Grid>
</Window>
